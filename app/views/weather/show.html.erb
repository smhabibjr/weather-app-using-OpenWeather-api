<section class="vh-100" style="background-color: #4B515D;">
  <div class="container py-5 h-100">

    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-6 col-xl-4">

        <div class="card" style="color: #4B515D; border-radius: 35px;">
          <div class="card-body p-4">

            <% if @api_status.present? %>

              <div class="d-flex">
                <h6 class="flex-grow-1"> <%= @api_status[:sys]['country'] %> , <%= @api_status[:name] %></h6>
                <h6><%= Date.today %></h6>
              </div>

              <div class="d-flex flex-column text-center mt-5 mb-4">
                <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"> <%= @api_status[:main]['temp'] %>
                  Â°C </h6>
                <span class="small" style="color: #868B94"> Feel's like <%= @api_status[:main]['feels_like'] %> </span>
                <span class="small" style="color: #868B94">  <%= @api_status[:weather][0]['main'] %> </span>
              </div>

              <div class="d-flex align-items-center">
                <div class="flex-grow-1" style="font-size: 1rem;">
                  <div><i class="fas fa-wind fa-fw" style="color: #868B94;"></i>
                    <span class="ms-1"> <%= @api_status[:wind]['speed'] %> km/h
                  </span></div>
                  <div><i class="fas fa-tint fa-fw" style="color: #868B94;"></i>
                    <span class="ms-1"> <%= @api_status[:main]['humidity'] %> % </span>
                  </div>
                  <div><i class="fas fa-sun fa-fw" style="color: #868B94;"></i>
                    <span class="ms-1"> <%= Time.at(@api_status[:sys]['sunset'].to_i / 1000).utc.strftime("%H:%M") %> </span>
                  </div>
                </div>
                <div>
                  <img src="http://openweathermap.org/img/wn/<%= @api_status[:weather][0]['icon'] %>@2x.png"
                       width="100px">
                </div>
              </div>

              <div class="back">
                <div class="row">
                  <div class="col d-flex justify-content-center align-items-center">
                    <%= link_to "Go to Home", root_path %>
                  </div>
                </div>
              </div>

              <% else %>

              <div class="back">
                <div class="row">
                  <div class="col">
                    <div class="notice d-flex justify-content-center">
                      <div id="emailHelp" class=" d-flex justify-content-center">
                        <h6>City couldn't found. Please enter the city name correctly.</h6>
                      </div>
                    </div>
                    <div class="back d-flex justify-content-center">
                      <%= link_to "Go to Home", root_path %>
                    </div>
                  </div>
                </div>
              </div>

            <% end %>

          </div>
        </div>

      </div>
    </div>
  </div>
</section>